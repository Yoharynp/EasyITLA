<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F8FF"
    tools:context=".ConfigurationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/ViewChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/_0220113_012508" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#0031DF"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="363dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="Yohary Antonio Nuñez Peña"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="italic" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#0031DF"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="363dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/editTextTextPersonemail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="20212335@itla.edu.do"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="italic" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#0031DF"
            app:cardCornerRadius="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="363dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="phone"
                    android:text="809-809-8099"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="italic" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_image_background"
            android:fontFamily="@font/inter"
            android:gravity="bottom|center"
            android:text="Guardar"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>